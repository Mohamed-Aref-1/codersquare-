{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": ".",
        "sourceMap": true,
        "moduleResolution": "NodeNext"
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
